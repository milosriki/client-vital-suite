{
  "mcpServers": {
    "hubspot-advan": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-hubspot"],
      "env": {
        "HUBSPOT_API_KEY": "your-api-key-here"
      }
    }
  },
  "tools": {
    "hubspot_create_engagement": {
      "name": "hubspot_create_engagement",
      "description": "Create an engagement (note, email, task, meeting, or call) in HubSpot",
      "input_schema": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "description": "Type of engagement",
            "enum": ["NOTE", "EMAIL", "TASK", "MEETING", "CALL"]
          },
          "contactId": {
            "type": "string",
            "description": "HubSpot contact ID"
          },
          "dealId": {
            "type": "string",
            "description": "HubSpot deal ID (optional)"
          },
          "companyId": {
            "type": "string",
            "description": "HubSpot company ID (optional)"
          },
          "body": {
            "type": "string",
            "description": "Content/body of the engagement"
          },
          "subject": {
            "type": "string",
            "description": "Subject line (for emails and tasks)"
          },
          "associations": {
            "type": "array",
            "description": "Array of associated record IDs",
            "items": {
              "type": "object",
              "properties": {
                "to": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "description": "ID of the associated record"
                    }
                  },
                  "required": ["id"]
                },
                "types": {
                  "type": "array",
                  "description": "Association types",
                  "items": {
                    "type": "object",
                    "properties": {
                      "associationCategory": {
                        "type": "string",
                        "enum": ["HUBSPOT_DEFINED", "USER_DEFINED", "INTEGRATOR_DEFINED"]
                      },
                      "associationTypeId": {
                        "type": "number",
                        "description": "Numeric ID of the association type"
                      }
                    },
                    "required": ["associationCategory", "associationTypeId"]
                  }
                }
              },
              "required": ["to", "types"]
            }
          },
          "metadata": {
            "type": "object",
            "description": "Additional metadata for the engagement",
            "properties": {
              "startTime": {
                "type": "number",
                "description": "Timestamp in milliseconds"
              },
              "endTime": {
                "type": "number",
                "description": "Timestamp in milliseconds"
              },
              "duration": {
                "type": "number",
                "description": "Duration in milliseconds"
              }
            }
          },
          "properties": {
            "type": "object",
            "description": "Custom properties for the engagement",
            "additionalProperties": true
          }
        },
        "required": ["type", "body"]
      }
    },
    "hubspot_search_contacts": {
      "name": "hubspot_search_contacts",
      "description": "Search for contacts in HubSpot",
      "input_schema": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "Search query"
          },
          "properties": {
            "type": "array",
            "description": "Array of properties to return",
            "items": {
              "type": "string"
            }
          },
          "filters": {
            "type": "array",
            "description": "Array of filter criteria",
            "items": {
              "type": "object",
              "properties": {
                "propertyName": {
                  "type": "string"
                },
                "operator": {
                  "type": "string",
                  "enum": ["EQ", "NEQ", "LT", "LTE", "GT", "GTE", "CONTAINS", "NOT_CONTAINS"]
                },
                "value": {
                  "type": "string"
                }
              },
              "required": ["propertyName", "operator", "value"]
            }
          },
          "sorts": {
            "type": "array",
            "description": "Array of sort criteria",
            "items": {
              "type": "object",
              "properties": {
                "propertyName": {
                  "type": "string"
                },
                "direction": {
                  "type": "string",
                  "enum": ["ASCENDING", "DESCENDING"]
                }
              },
              "required": ["propertyName", "direction"]
            }
          },
          "limit": {
            "type": "number",
            "description": "Maximum number of results to return",
            "default": 10,
            "minimum": 1,
            "maximum": 100
          }
        },
        "required": ["query"]
      }
    },
    "hubspot_create_contact": {
      "name": "hubspot_create_contact",
      "description": "Create a new contact in HubSpot",
      "input_schema": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "description": "Email address of the contact",
            "format": "email"
          },
          "firstname": {
            "type": "string",
            "description": "First name"
          },
          "lastname": {
            "type": "string",
            "description": "Last name"
          },
          "phone": {
            "type": "string",
            "description": "Phone number"
          },
          "company": {
            "type": "string",
            "description": "Company name"
          },
          "customProperties": {
            "type": "object",
            "description": "Custom properties",
            "additionalProperties": {
              "type": "string"
            }
          }
        },
        "required": ["email"]
      }
    },
    "hubspot_update_contact": {
      "name": "hubspot_update_contact",
      "description": "Update an existing contact in HubSpot",
      "input_schema": {
        "type": "object",
        "properties": {
          "contactId": {
            "type": "string",
            "description": "HubSpot contact ID"
          },
          "properties": {
            "type": "object",
            "description": "Properties to update",
            "additionalProperties": {
              "type": "string"
            }
          }
        },
        "required": ["contactId", "properties"]
      }
    }
  }
}
